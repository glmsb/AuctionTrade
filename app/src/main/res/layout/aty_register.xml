<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.wyd.auctiontrade.view.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/layout_register_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="账号注册"
        android:textColor="@color/c_main"
        android:textSize="20sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:stretchColumns="1">

        <TableRow android:padding="8dp">

            <TextView
                android:ems="4"
                android:hint="手机号  "
                android:textSize="@dimen/content_text_size"/>

            <EditText
                android:id="@+id/et_phone"
                android:inputType="phone"
                android:textCursorDrawable="@mipmap/et_cursor_line_blue"
                android:textSize="@dimen/content_text_size"/>
        </TableRow>

        <TableRow android:padding="8dp">

            <TextView
                android:ems="4"
                android:hint="密码  "
                android:textSize="@dimen/content_text_size"/>

            <EditText
                android:id="@+id/et_password"
                android:ems="16"
                android:hint="6~16个数字和字母组合"
                android:inputType="textPassword"
                android:textCursorDrawable="@mipmap/et_cursor_line_blue"
                android:textSize="@dimen/content_text_size"/>
        </TableRow>


        <TableRow android:padding="8dp">

            <TextView
                android:ems="4"
                android:hint="确认密码  "
                android:textSize="@dimen/content_text_size"/>

            <EditText
                android:id="@+id/et_sure_password"
                android:hint="请再次确认密码"
                android:inputType="textPassword"
                android:textCursorDrawable="@mipmap/et_cursor_line_blue"
                android:textSize="@dimen/content_text_size"/>
        </TableRow>

        <TableRow android:padding="8dp">

            <TextView
                android:ems="4"
                android:hint="邮箱  "
                android:textSize="@dimen/content_text_size"/>

            <EditText
                android:id="@+id/et_email"
                android:hint="该邮箱用于找回密码"
                android:inputType="textWebEmailAddress"
                android:textCursorDrawable="@mipmap/et_cursor_line_blue"
                android:textSize="@dimen/content_text_size"/>
        </TableRow>

        <TableRow android:padding="8dp">

            <TextView
                android:ems="4"
                android:hint="姓名  "
                android:textSize="@dimen/content_text_size"/>

            <EditText
                android:id="@+id/et_user_name"
                android:hint="为保证交易的真实性，须填写真实姓名"
                android:inputType="text"
                android:textCursorDrawable="@mipmap/et_cursor_line_blue"
                android:textSize="@dimen/content_text_size"/>
        </TableRow>

        <TableRow android:padding="8dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:ems="4"
                android:hint="性别  "
                android:textSize="@dimen/content_text_size"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="男神"
                    android:textColor="@color/c_major_assist"/>

                <RadioButton
                    android:id="@+id/rb_women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:text="靓女"
                    android:textColor="@color/c_major_assist"/>

            </RadioGroup>

        </TableRow>
    </TableLayout>

</LinearLayout>
