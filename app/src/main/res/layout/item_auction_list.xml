<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imv_auction_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/ic_photo_black_48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/ll_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_auction_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="小米手机"
                android:textColor="@color/c_main"
                android:textSize="@dimen/top_bar_center_text_size" />

            <TextView
                android:id="@+id/tv_auction_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-5-21 20:14:10"
                android:textColor="@color/c_emphasize_blue" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_auction_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_ref"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="描述"
            android:textSize="@dimen/content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_auction_description"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_price_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实时价格:"
                android:textSize="@dimen/content_text_size" />

            <TextView
                android:id="@+id/tv_auction_latest_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥49.8"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/c_emphasize_blue"
                android:textSize="@dimen/money_text_size" />

            <TextView
                android:id="@+id/tv_access_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_watch"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="6566"
                android:textColor="@color/c_emphasize_blue"
                android:textSize="@dimen/content_text_size" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>