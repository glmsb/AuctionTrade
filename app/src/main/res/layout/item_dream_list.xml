<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/tv_dream_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小米手机"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/c_emphasize_blue"
            android:textStyle="bold"
            android:textSize="@dimen/top_bar_center_text_size" />

        <TextView
            android:id="@+id/tv_dream_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-5-21 20:14:10"
            android:textColor="@color/c_emphasize_blue" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述信息："
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/tv_dream_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="描述"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/c_main"
            android:textSize="@dimen/content_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="类\t\t\t\t型："
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/tv_dream_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:text="数码办公"
            android:textColor="@color/c_main"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/tv_achieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/coral"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="帮他实现"
            android:textColor="@color/c_white"
            android:textSize="@dimen/top_bar_text_size" />
    </LinearLayout>


</LinearLayout>